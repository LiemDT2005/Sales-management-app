<Window x:Class="SMA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:SMA.ViewModels"
        xmlns:vmUser="clr-namespace:SMA.ViewModels.UserViewModels"
        xmlns:viewsAdmin="clr-namespace:SMA.Views.Admin"
        xmlns:helper="clr-namespace:SMA.Helper"
        xmlns:converters="clr-namespace:SMA.Converters"
        mc:Ignorable="d"
        Title="Sales Management System"
        Height="720" Width="1180"
        WindowStartupLocation="CenterScreen"
        Background="#F6F8FA">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>

        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>

        <DataTemplate DataType="{x:Type vm:ProductVM}">
            <viewsAdmin:ProductView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vmUser:UserManagementViewModel}">
            <viewsAdmin:UserManagementView/>
        </DataTemplate>
        
        <!-- Button có bo góc -->
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2563EB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Logout Button Style -->
        <Style x:Key="LogoutButton" TargetType="Button" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Background" Value="#EF4444"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DC2626"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- Bố cục chính -->
    <Grid x:Name="RootLayout">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#1F2937">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Orientation="Horizontal" Margin="12,26,20,18">
                    <!-- Nút toggle -->
                    <Button Width="36" Height="36"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Command="{Binding ToggleSidebarCommand}">
                        <TextBlock Text="&#xE700;"
                                   FontFamily="Segoe MDL2 Assets"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Button>

                    <!-- Text ẩn khi thu -->
                    <StackPanel Margin="12,0,0,0">
                        <TextBlock Text="SMA Dashboard"
                                   Foreground="White"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,0,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsSidebarCollapsed}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>

                <!-- Menu -->
                <StackPanel Grid.Row="1" Margin="10">
                    <StackPanel.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Height" Value="40"/>
                            <Setter Property="Margin" Value="4"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8"
                                                Padding="10,0">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="28"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Icon -->
                                                <TextBlock Text="{TemplateBinding Tag}"
                                                           FontFamily="Segoe MDL2 Assets"
                                                           Foreground="{TemplateBinding Foreground}"
                                                           VerticalAlignment="Center"
                                                           FontSize="16"/>

                                                <!-- Text -->
                                                <TextBlock Grid.Column="1"
                                                           Text="{TemplateBinding Content}"
                                                           Foreground="{TemplateBinding Foreground}"
                                                           VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsSidebarCollapsed}" Value="True">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#374151"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </StackPanel.Resources>

                    <!-- Users Menu - Chỉ Admin mới thấy -->
                    <Button Tag="&#xE716;" Content="Users" Click="ManageUsers_Click"
                            Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVisibilityConverter}}"/>

                    <!-- Các menu khác - Tất cả user đều thấy -->
                    <Button Tag="&#xE8C8;" Content="Orders" Click="OpenOrderList_Click"/>
                    <Button Tag="&#xE7BF;" Content="Products" Click="OpenProductView_Click"/>
                    <Button Tag="&#xE8FD;" Content="Categories" Click="Button_Click_2"/>
                    <Button Tag="&#xE716;" Content="Customers" Click="ManageCustomer_Click"/>
                </StackPanel>

                <!-- User Footer -->
                <Border Grid.Row="2" Margin="12,0,12,12" Background="#111827" CornerRadius="10" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="32"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Avatar -->
                        <Border Grid.Column="0" Width="32" Height="32" 
                                Background="#3B82F6" 
                                CornerRadius="16">
                            <TextBlock Text="&#xE77B;"
                                       FontFamily="Segoe MDL2 Assets"
                                       Foreground="White"
                                       FontSize="16"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <!-- Avatar -->
                        <Ellipse Grid.Column="0" Width="32" Height="32" Fill="#374151"/>

                        <!-- Tên người dùng -->
                        <TextBlock Grid.Column="1"
                                   Text="{Binding CurrentUserName}"
                                   Foreground="White"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsSidebarCollapsed}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!-- User Menu (when logged in) -->
                        <StackPanel Grid.Column="2" 
                                    Orientation="Horizontal"
                                    Visibility="{Binding IsUserLoggedIn, Converter={StaticResource BoolToVisibilityConverter}}">
                            <!-- Change Password Button -->
                            <Button Style="{StaticResource RoundedButton}"
                                    Width="40" Height="34"
                                    Margin="6,0,4,0"
                                    Command="{Binding ChangePasswordCommand}"
                                    ToolTip="Change Password">
                                <TextBlock Text="&#xE72E;"
                                           FontFamily="Segoe MDL2 Assets"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           FontSize="14"/>
                            </Button>

                            <!-- Logout Button -->
                            <Button Style="{StaticResource LogoutButton}"
                                    Width="40" Height="34"
                                    Command="{Binding LogoutCommand}"
                                    ToolTip="Logout">
                                <TextBlock Text="&#xE7E8;"
                                           FontFamily="Segoe MDL2 Assets"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           FontSize="14"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Main content -->
        <!-- Main content -->
        <Grid Grid.Column="1" Background="#F6F8FA">
            <!-- ContentControl để hiển thị các pages -->
            <ContentControl x:Name="MainContent">
                <!-- Default view khi mới vào -->
                <StackPanel VerticalAlignment="Center"
                           HorizontalAlignment="Center">
                    <TextBlock Text="Welcome to Sales Management System"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#1F2937"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,12"/>
                    <TextBlock HorizontalAlignment="Center"
                               FontSize="16"
                               Foreground="#6B7280"
                               Margin="0,0,0,8">
                        <Run Text="Logged in as: "/>
                        <Run Text="{Binding CurrentUserName}" FontWeight="SemiBold" Foreground="#3B82F6"/>
                    </TextBlock>
                    <TextBlock HorizontalAlignment="Center"
                               FontSize="14"
                               Foreground="#6B7280">
                        <Run Text="Role: "/>
                        <Run Text="{Binding CurrentUserRole}" FontWeight="SemiBold" Foreground="#10B981"/>
                    </TextBlock>
                </StackPanel>
            </ContentControl>
        </Grid>

    </Grid>
</Window>
