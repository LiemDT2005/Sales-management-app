<Window x:Class="SMA.Views.Auth.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SMA.Views"
        xmlns:converters="clr-namespace:SMA.Converters"
        xmlns:helper="clr-namespace:SMA.Helper"
        mc:Ignorable="d"
        Title="Login - Sales Management System" 
        Height="720" Width="1180"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        ResizeMode="CanResize">

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Window.Resources>

    <!-- Full screen overlay để che phủ hoàn toàn nếu có window phía sau -->
    <Grid Background="#F3F4F6">
        <!-- Loading Overlay -->
        <Border Background="#80000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                Panel.ZIndex="999">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="⟳" 
                           FontSize="48" 
                           Foreground="White"
                           HorizontalAlignment="Center"
                           RenderTransformOrigin="0.5,0.5">
                    <TextBlock.RenderTransform>
                        <RotateTransform x:Name="LoadingRotate"/>
                    </TextBlock.RenderTransform>
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="LoadingRotate"
                                                   Storyboard.TargetProperty="Angle"
                                                   From="0" To="360"
                                                   Duration="0:0:1"
                                                   RepeatBehavior="Forever"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>
                <TextBlock Text="Logging in..." 
                           Foreground="White" 
                           FontSize="16"
                           Margin="0,16,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main ScrollViewer -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalAlignment="Center">
            <!-- Container chính với MaxWidth -->
            <Border Background="White"
                    CornerRadius="16"
                    MaxWidth="450"
                    Padding="40"
                    Margin="20"
                    HorizontalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" 
                                    ShadowDepth="0" 
                                    Opacity="0.1"
                                    Color="#000000"/>
                </Border.Effect>

                <StackPanel>
                    <!-- Logo/Icon -->
                    <Border Width="80" 
                            Height="80" 
                            Background="#3B82F6"
                            CornerRadius="40"
                            Margin="0,0,0,24"
                            HorizontalAlignment="Center">
                        <TextBlock Text="&#xE77B;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="40"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- Title -->
                    <TextBlock Text="Login to Sale Management System"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="#1F2937"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Margin="0,0,0,32"/>

                    <!-- Error Message -->
                    <Border Background="#FEE2E2"
                            BorderBrush="#EF4444"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="12"
                            Margin="0,0,0,16"
                            MaxHeight="100"
                            Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚠" 
                                           Foreground="#DC2626" 
                                           FontSize="16"
                                           Margin="0,0,8,0"
                                           VerticalAlignment="Top"/>
                                <TextBlock Text="{Binding ErrorMessage}"
                                           Foreground="#DC2626"
                                           FontSize="13"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>

                    <!-- Email Field -->
                    <TextBlock Text="Email"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#374151"
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="EmailTextBox"
                             Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                             Height="44"
                             Padding="12,10"
                             FontSize="14"
                             Background="White"
                             Foreground="#1F2937"
                             BorderBrush="#D1D5DB"
                             BorderThickness="1"
                             Margin="0,0,0,20"/>

                    <!-- Password Field -->
                    <TextBlock Text="Password"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#374151"
                               Margin="0,0,0,8"/>

                    <Grid Margin="0,0,0,12">
                        <!-- PasswordBox với PasswordBoxHelper (MVVM-compliant) -->
                        <PasswordBox x:Name="PasswordBox"
                                     helper:PasswordBoxHelper.BindPassword="True"
                                     helper:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Height="44"
                                     Padding="12,10,50,10"
                                     FontSize="14"
                                     Background="White"
                                     Foreground="#1F2937"
                                     BorderBrush="#D1D5DB"
                                     BorderThickness="1"
                                     Visibility="{Binding IsPasswordVisible, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>

                        <!-- TextBox (hiện password) -->
                        <TextBox Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                                 Height="44"
                                 Padding="12,10,50,10"
                                 FontSize="14"
                                 Background="White"
                                 Foreground="#1F2937"
                                 BorderBrush="#D1D5DB"
                                 BorderThickness="1"
                                 Visibility="{Binding IsPasswordVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <!-- Toggle Password Visibility Button -->
                        <Button HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Width="40"
                                Height="40"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Margin="0,0,4,0"
                                Command="{Binding TogglePasswordVisibilityCommand}">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       FontSize="16"
                                       Foreground="#6B7280">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="&#xE7B3;"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsPasswordVisible}" Value="True">
                                                <Setter Property="Text" Value="&#xED1A;"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Button>
                    </Grid>

                    <!-- Forgot Password -->
                    <Button Content="Forgot Password?"
                            Background="Transparent"
                            Foreground="#3B82F6"
                            FontSize="13"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand"
                            HorizontalAlignment="Right"
                            Margin="0,0,0,24"
                            Command="{Binding ForgotPasswordCommand}"/>

                    <!-- Login Button -->
                    <Button Content="Login"
                            Height="44"
                            Background="#3B82F6"
                            Foreground="White"
                            FontSize="15"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Command="{Binding LoginCommand}"/>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Window>
