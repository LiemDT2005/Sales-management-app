<Window x:Class="SMA.Views.Auth.ForgotPasswordView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:SMA.Converters"
        Title="Forgot Password" Height="600" Width="800" 
        Background="#F3F4F6"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <!-- Loading Overlay -->
        <Border Background="#80000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                Panel.ZIndex="999">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="⟳" 
                           FontSize="48" 
                           Foreground="White"
                           HorizontalAlignment="Center"
                           RenderTransformOrigin="0.5,0.5">
                    <TextBlock.RenderTransform>
                        <RotateTransform x:Name="LoadingRotate"/>
                    </TextBlock.RenderTransform>
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="LoadingRotate"
                                                   Storyboard.TargetProperty="Angle"
                                                   From="0" To="360"
                                                   Duration="0:0:1"
                                                   RepeatBehavior="Forever"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>
                <TextBlock Text="Processing..." 
                           Foreground="White" 
                           FontSize="16"
                           Margin="0,16,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main ScrollViewer -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalAlignment="Center">
            <!-- Main Content -->
            <Border Background="White" 
                    CornerRadius="16" 
                    MaxWidth="450" 
                    Padding="40"
                    Margin="20"
                    HorizontalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" 
                                    ShadowDepth="0" 
                                    Opacity="0.1" 
                                    Color="#000000"/>
                </Border.Effect>

                <StackPanel>
                    <!-- Logo/Icon -->
                    <Border Width="80" 
                            Height="80" 
                            Background="#3B82F6" 
                            CornerRadius="40"
                            Margin="0,0,0,24" 
                            HorizontalAlignment="Center">
                        <TextBlock Text="&#xE72E;" 
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="36" 
                                   Foreground="White"
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Center"/>
                    </Border>

                    <!-- Title -->
                    <TextBlock Text="Forgot Password" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="#1F2937" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,12"/>

                    <!-- Subtitle -->
                    <TextBlock Text="Enter your email to receive OTP"
                               FontSize="14"
                               Foreground="#6B7280"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Margin="0,0,0,32"/>

                    <!-- Error Message -->
                    <Border Background="#FEE2E2"
                            BorderBrush="#EF4444"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="12"
                            Margin="0,0,0,16"
                            MaxHeight="100"
                            Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚠" 
                                           Foreground="#DC2626" 
                                           FontSize="16"
                                           Margin="0,0,8,0"
                                           VerticalAlignment="Top"/>
                                <TextBlock Text="{Binding ErrorMessage}"
                                           Foreground="#DC2626"
                                           FontSize="13"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>

                    <!-- Success Message -->
                    <Border Background="#D1FAE5"
                            BorderBrush="#10B981"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="12"
                            Margin="0,0,0,16"
                            MaxHeight="100"
                            Visibility="{Binding SuccessMessage, Converter={StaticResource StringToVisibilityConverter}}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="✓" 
                                           Foreground="#059669" 
                                           FontSize="16"
                                           Margin="0,0,8,0"
                                           VerticalAlignment="Top"/>
                                <TextBlock Text="{Binding SuccessMessage}"
                                           Foreground="#059669"
                                           FontSize="13"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>

                    <!-- Email Field -->
                    <TextBlock Text="Email Address" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="#374151" 
                               Margin="0,0,0,8"/>
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                             Height="44"
                             Padding="12,10"
                             FontSize="14"
                             Background="White"
                             Foreground="#1F2937"
                             BorderBrush="#D1D5DB"
                             BorderThickness="1"
                             Margin="0,0,0,16"
                             IsEnabled="{Binding IsOtpSent, Converter={StaticResource InverseBooleanConverter}}"/>

                    <!-- Send OTP Button -->
                    <Button Content="{Binding SendOtpButtonText}" 
                            Height="44"
                            Background="#3B82F6"
                            Foreground="White"
                            FontSize="15"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Command="{Binding SendOtpCommand}" 
                            Margin="0,0,0,24"
                            Visibility="{Binding IsOtpSent, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>

                    <!-- OTP Section -->
                    <StackPanel Visibility="{Binding IsOtpSent, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Border Background="#EFF6FF"
                                BorderBrush="#3B82F6"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="12"
                                Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ℹ" 
                                           Foreground="#3B82F6" 
                                           FontSize="16"
                                           Margin="0,0,8,0"/>
                                <TextBlock Foreground="#1E40AF"
                                           FontSize="13"
                                           TextWrapping="Wrap">
                                    <Run Text="A 6-digit OTP has been sent to your email."/>
                                    <LineBreak/>
                                    <Run Text="You have "/>
                                    <Run Text="{Binding RemainingAttempts, Mode=OneWay}" FontWeight="Bold"/>
                                    <Run Text=" attempt(s) remaining."/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="Enter OTP Code" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Foreground="#374151" 
                                   Margin="0,0,0,8"/>
                        <TextBox Text="{Binding Otp, UpdateSourceTrigger=PropertyChanged}" 
                                 Height="44"
                                 Padding="12,10"
                                 FontSize="14"
                                 Background="White"
                                 Foreground="#1F2937"
                                 BorderBrush="#D1D5DB"
                                 BorderThickness="1"
                                 MaxLength="6"
                                 Margin="0,0,0,16"/>

                        <Button Content="Verify OTP" 
                                Height="44"
                                Background="#3B82F6"
                                Foreground="White"
                                FontSize="15"
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                Cursor="Hand"
                                Command="{Binding VerifyOtpCommand}"
                                Margin="0,0,0,12"/>
                    </StackPanel>

                    <!-- Back to Login -->
                    <Button Content="Back to Login" 
                            Height="44"
                            Background="White"
                            Foreground="#374151"
                            FontSize="15"
                            FontWeight="SemiBold"
                            BorderBrush="#D1D5DB"
                            BorderThickness="1"
                            Cursor="Hand"
                            Command="{Binding BackToLoginCommand}"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Window>
