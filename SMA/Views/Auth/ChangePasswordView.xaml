<Window x:Class="SMA.Views.Auth.ChangePasswordView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:SMA.Converters"
        xmlns:helper="clr-namespace:SMA.Helper"
        Title="Change Password" Height="600" Width="800" 
        Background="#F3F4F6"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <!-- Loading Overlay -->
        <Border Background="#80000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                Panel.ZIndex="999">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="?" 
                           FontSize="48" 
                           Foreground="White"
                           HorizontalAlignment="Center"
                           RenderTransformOrigin="0.5,0.5">
                    <TextBlock.RenderTransform>
                        <RotateTransform x:Name="LoadingRotate"/>
                    </TextBlock.RenderTransform>
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="LoadingRotate"
                                                   Storyboard.TargetProperty="Angle"
                                                   From="0" To="360"
                                                   Duration="0:0:1"
                                                   RepeatBehavior="Forever"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>
                <TextBlock Text="Changing password..." 
                           Foreground="White" 
                           FontSize="16"
                           Margin="0,16,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main ScrollViewer -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalAlignment="Center">
            <!-- Main Content -->
            <Border Background="White" 
                    CornerRadius="16" 
                    MaxWidth="450" 
                    Padding="40"
                    Margin="20"
                    HorizontalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" 
                                    ShadowDepth="0" 
                                    Opacity="0.1" 
                                    Color="#000000"/>
                </Border.Effect>

                <StackPanel>
                    <!-- Logo/Icon -->
                    <Border Width="80" 
                            Height="80" 
                            Background="#8B5CF6" 
                            CornerRadius="40"
                            Margin="0,0,0,24" 
                            HorizontalAlignment="Center">
                        <TextBlock Text="&#xE72E;" 
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="36" 
                                   Foreground="White"
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Center"/>
                    </Border>

                    <!-- Title -->
                    <TextBlock Text="Change Password" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="#1F2937" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,12"/>

                    <!-- Subtitle -->
                    <TextBlock Text="Update your account password"
                               FontSize="14"
                               Foreground="#6B7280"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Margin="0,0,0,32"/>

                    <!-- Error Message -->
                    <Border Background="#FEE2E2"
                            BorderBrush="#EF4444"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="12"
                            Margin="0,0,0,16"
                            MaxHeight="100"
                            Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="?" 
                                           Foreground="#DC2626" 
                                           FontSize="16"
                                           Margin="0,0,8,0"
                                           VerticalAlignment="Top"/>
                                <TextBlock Text="{Binding ErrorMessage}"
                                           Foreground="#DC2626"
                                           FontSize="13"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>

                    <!-- Success Message -->
                    <Border Background="#D1FAE5"
                            BorderBrush="#10B981"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="12"
                            Margin="0,0,0,16"
                            MaxHeight="100"
                            Visibility="{Binding SuccessMessage, Converter={StaticResource StringToVisibilityConverter}}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="?" 
                                           Foreground="#059669" 
                                           FontSize="16"
                                           Margin="0,0,8,0"
                                           VerticalAlignment="Top"/>
                                <TextBlock Text="{Binding SuccessMessage}"
                                           Foreground="#059669"
                                           FontSize="13"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>

                    <!-- Current Password Field -->
                    <TextBlock Text="Current Password" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="#374151" 
                               Margin="0,0,0,8"/>
                    <Grid Margin="0,0,0,20">
                        <!-- PasswordBox v?i PasswordBoxHelper (MVVM-compliant) -->
                        <PasswordBox x:Name="CurrentPasswordBox"
                                     helper:PasswordBoxHelper.BindPassword="True"
                                     helper:PasswordBoxHelper.BoundPassword="{Binding CurrentPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Height="44"
                                     Padding="12,10,50,10"
                                     FontSize="14"
                                     Background="White"
                                     Foreground="#1F2937"
                                     BorderBrush="#D1D5DB"
                                     BorderThickness="1"
                                     Visibility="{Binding IsCurrentPasswordVisible, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>

                        <!-- TextBox (visible) -->
                        <TextBox Text="{Binding CurrentPassword, UpdateSourceTrigger=PropertyChanged}"
                                 Height="44"
                                 Padding="12,10,50,10"
                                 FontSize="14"
                                 Background="White"
                                 Foreground="#1F2937"
                                 BorderBrush="#D1D5DB"
                                 BorderThickness="1"
                                 Visibility="{Binding IsCurrentPasswordVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <!-- Toggle Button -->
                        <Button HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Width="40"
                                Height="40"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Margin="0,0,4,0"
                                Command="{Binding ToggleCurrentPasswordVisibilityCommand}">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       FontSize="16"
                                       Foreground="#6B7280">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="&#xE7B3;"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsCurrentPasswordVisible}" Value="True">
                                                <Setter Property="Text" Value="&#xED1A;"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Button>
                    </Grid>

                    <!-- New Password Field -->
                    <TextBlock Text="New Password" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="#374151" 
                               Margin="0,0,0,8"/>
                    <Grid Margin="0,0,0,16">
                        <!-- PasswordBox v?i PasswordBoxHelper (MVVM-compliant) -->
                        <PasswordBox x:Name="NewPasswordBox"
                                     helper:PasswordBoxHelper.BindPassword="True"
                                     helper:PasswordBoxHelper.BoundPassword="{Binding NewPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Height="44"
                                     Padding="12,10,50,10"
                                     FontSize="14"
                                     Background="White"
                                     Foreground="#1F2937"
                                     BorderBrush="#D1D5DB"
                                     BorderThickness="1"
                                     Visibility="{Binding IsNewPasswordVisible, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>

                        <!-- TextBox (visible) -->
                        <TextBox Text="{Binding NewPassword, UpdateSourceTrigger=PropertyChanged}"
                                 Height="44"
                                 Padding="12,10,50,10"
                                 FontSize="14"
                                 Background="White"
                                 Foreground="#1F2937"
                                 BorderBrush="#D1D5DB"
                                 BorderThickness="1"
                                 Visibility="{Binding IsNewPasswordVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <!-- Toggle Button -->
                        <Button HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Width="40"
                                Height="40"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Margin="0,0,4,0"
                                Command="{Binding ToggleNewPasswordVisibilityCommand}">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       FontSize="16"
                                       Foreground="#6B7280">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="&#xE7B3;"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsNewPasswordVisible}" Value="True">
                                                <Setter Property="Text" Value="&#xED1A;"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Button>
                    </Grid>

                    <!-- Confirm Password Field -->
                    <TextBlock Text="Confirm New Password" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="#374151" 
                               Margin="0,0,0,8"/>
                    <Grid Margin="0,0,0,8">
                        <!-- PasswordBox v?i PasswordBoxHelper (MVVM-compliant) -->
                        <PasswordBox x:Name="ConfirmPasswordBox"
                                     helper:PasswordBoxHelper.BindPassword="True"
                                     helper:PasswordBoxHelper.BoundPassword="{Binding ConfirmPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Height="44"
                                     Padding="12,10,50,10"
                                     FontSize="14"
                                     Background="White"
                                     Foreground="#1F2937"
                                     BorderBrush="#D1D5DB"
                                     BorderThickness="1"
                                     Visibility="{Binding IsConfirmPasswordVisible, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>

                        <!-- TextBox (visible) -->
                        <TextBox Text="{Binding ConfirmPassword, UpdateSourceTrigger=PropertyChanged}"
                                 Height="44"
                                 Padding="12,10,50,10"
                                 FontSize="14"
                                 Background="White"
                                 Foreground="#1F2937"
                                 BorderBrush="#D1D5DB"
                                 BorderThickness="1"
                                 Visibility="{Binding IsConfirmPasswordVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <!-- Toggle Button -->
                        <Button HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Width="40"
                                Height="40"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Margin="0,0,4,0"
                                Command="{Binding ToggleConfirmPasswordVisibilityCommand}">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       FontSize="16"
                                       Foreground="#6B7280">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="&#xE7B3;"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsConfirmPasswordVisible}" Value="True">
                                                <Setter Property="Text" Value="&#xED1A;"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Button>
                    </Grid>

                    <!-- Password Requirements -->
                    <Border Background="#EFF6FF"
                            BorderBrush="#3B82F6"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="12"
                            Margin="0,0,0,24">
                        <StackPanel>
                            <TextBlock Text="Password Requirements:"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="#1E40AF"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="- Minimum 6 characters"
                                       FontSize="11"
                                       Foreground="#1E40AF"/>
                            <TextBlock Text="- New password must match confirmation"
                                       FontSize="11"
                                       Foreground="#1E40AF"/>
                        </StackPanel>
                    </Border>

                    <!-- Change Password Button -->
                    <Button Content="Change Password" 
                            Height="44"
                            Background="#3B82F6"
                            Foreground="White"
                            FontSize="15"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Command="{Binding ChangePasswordCommand}"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                            Margin="0,0,0,12"/>

                    <!-- Cancel Button -->
                    <Button Content="Cancel" 
                            Height="44"
                            Background="White"
                            Foreground="#374151"
                            FontSize="15"
                            FontWeight="SemiBold"
                            BorderBrush="#D1D5DB"
                            BorderThickness="1"
                            Cursor="Hand"
                            Command="{Binding CancelCommand}"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Window>
