<UserControl x:Class="SMA.Views.Admin.ProductView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:SMA.ViewModels"
             xmlns:conv="clr-namespace:SMA.Converters"
             mc:Ignorable="d"
             Background="#F5F7FB" Height="770">
    
    

    <!-- ======================== Resources / Styles ======================== -->
    <UserControl.Resources>
        <conv:ImagePathConverter x:Key="ImagePathConverter"/>
        <conv:DateNullableConverter x:Key="DateNullableConverter"/>

        <!-- Elevation card -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Padding" Value="14"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E6E8EE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#21000000" BlurRadius="10" ShadowDepth="2" Opacity="0.18"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section title -->
        <Style x:Key="H2" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#1F274D"/>
        </Style>

        <!-- Modern Button -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#21000000" Direction="270" ShadowDepth="2" BlurRadius="6" Opacity="0.22"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1D4ED8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button variants -->
        <Style x:Key="SearchButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#2563EB"/>
        </Style>
        <Style x:Key="AddButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#16A34A"/>
        </Style>
        <Style x:Key="SaveButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#2563EB"/>
        </Style>
        <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#F59E0B"/>
        </Style>
        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#DC2626"/>
        </Style>
        <Style x:Key="ViewImageButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#7C3AED"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="MinWidth" Value="90"/>
            <Setter Property="MinHeight" Value="34"/>
        </Style>

        <!-- Inputs -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E1E4EC"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#2563EB"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#F3F4F6"/>
                                <Setter Property="Foreground" Value="#9CA3AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E1E4EC"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#2563EB"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#F3F4F6"/>
                    <Setter Property="Foreground" Value="#9CA3AF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid polish -->
        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#2563EB"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#E5E7EB"/>

        <Style TargetType="DataGrid">
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F8FAFC"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#EEF1F6"/>
            <Setter Property="VerticalGridLinesBrush" Value="#EEF1F6"/>
            <Setter Property="RowHeight" Value="64"/>
            <Setter Property="ColumnHeaderHeight" Value="40"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#0F000000" BlurRadius="6" ShadowDepth="1" Opacity="0.06"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EEF2FF"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E0E7FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <!-- ======================== Layout ======================== -->
    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Title + Status -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🛒" FontSize="22" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Product Management" FontSize="22" FontWeight="Bold" Foreground="#111827" Margin="0,0,8,0"/>
                    <Border Background="#E5F0FF" CornerRadius="999" Padding="10,4" Margin="6,0,0,0">
                        <TextBlock Text="{Binding Status}" FontSize="12" Foreground="#1D4ED8"/>
                    </Border>
                </StackPanel>

                <!-- Right: Filter -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Category:" VerticalAlignment="Center" Foreground="#374151" FontWeight="SemiBold" Margin="0,0,8,0"/>
                    <ComboBox ItemsSource="{Binding Categories}"
                              SelectedValue="{Binding SelectedCategoryId}"
                              SelectedValuePath="CategoryId"
                              DisplayMemberPath="CategoryName"
                              Width="220"
                              MinHeight="36"
                              Style="{StaticResource ModernComboBoxStyle}"
                              Margin="0,0,8,0"/>
                    <Button Command="{Binding FilterCommand}" Style="{StaticResource SearchButtonStyle}" Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔍" Margin="0,0,6,0"/>
                            <TextBlock Text="Filter"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding ClearFilterCommand}" Style="{StaticResource CancelButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="❌" Margin="0,0,6,0"/>
                            <TextBlock Text="Clear"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Spacer -->
        <Grid Grid.Row="1"/>

        <!-- Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Form -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Product Information" Style="{StaticResource H2}" Margin="0,0,0,12"/>

                        <!-- Search -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBox Text="{Binding Keyword}" Width="240" MinHeight="30" Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,8,0" Height="53"/>
                            <Button Command="{Binding SearchCommand}" Style="{StaticResource SearchButtonStyle}" Height="36">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🔍" Margin="0,0,6,0"/>
                                    <TextBlock Text="Search"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <!-- Fields -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Name -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Product Name" Margin="0,-5,8,17" FontWeight="SemiBold"/>
                            <TextBox   Grid.Row="0" Grid.Column="1"
                                       Text="{Binding EditingProductName, UpdateSourceTrigger=PropertyChanged}"
                                       MinHeight="38"
                                       Style="{StaticResource ModernTextBoxStyle}"
                                       IsEnabled="{Binding IsFormEnabled}" Height="53" VerticalAlignment="Top" Grid.RowSpan="2" Margin="0,-5,0,0"/>

                            <!-- Category -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Category" Margin="0,25,8,95" FontWeight="SemiBold" Grid.RowSpan="2"/>
                            <ComboBox  Grid.Row="1" Grid.Column="1"
                                       ItemsSource="{Binding Categories}"
                                       SelectedValue="{Binding EditingCategoryId}"
                                       SelectedValuePath="CategoryId"
                                       DisplayMemberPath="CategoryName"
                                       MinHeight="38"
                                       Style="{StaticResource ModernComboBoxStyle}"
                                       IsEnabled="{Binding IsFormEnabled}" Margin="0,25,0,103" Grid.RowSpan="2"/>

                            <!-- Description -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Description" Margin="0,10,8,0" FontWeight="SemiBold" VerticalAlignment="Top"/>
                            <TextBox   Grid.Row="2" Grid.Column="1"
                                       Text="{Binding EditingDescription, UpdateSourceTrigger=PropertyChanged}"
                                       MinHeight="88"
                                       Style="{StaticResource ModernTextBoxStyle}"
                                       TextWrapping="Wrap"
                                       AcceptsReturn="True"
                                       VerticalContentAlignment="Top"
                                       IsEnabled="{Binding IsFormEnabled}" Margin="0,10,0,5"/>

                            <!-- Stock -->
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Stock" Margin="0,2,8,49" FontWeight="SemiBold" Grid.RowSpan="2"/>
                            <TextBox   Grid.Row="3" Grid.Column="1"
                                       Text="{Binding EditingStockQuantity, UpdateSourceTrigger=LostFocus}"
                                       MinHeight="36"
                                       Style="{StaticResource ModernTextBoxStyle}"
                                       IsEnabled="{Binding IsFormEnabled}" Margin="0,2,0,10"/>

                            <!-- Price -->
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Price (VND)" Margin="0,6,8,6" FontWeight="SemiBold"/>
                            <TextBox   Grid.Row="3" Grid.Column="1"
                                       Text="{Binding EditingPrice, UpdateSourceTrigger=LostFocus, StringFormat={}{0:N0}}"
                                       MinHeight="36"
                                       Style="{StaticResource ModernTextBoxStyle}"
                                       ToolTip="Currency: VND"
                                       IsEnabled="{Binding IsFormEnabled}" Margin="0,73,0,10" Grid.RowSpan="2"/>

                            <!-- Image -->
                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Image File" Margin="0,6,8,6" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <Grid Grid.Row="5" Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0"
                                         Text="{Binding EditingImageUrl, UpdateSourceTrigger=PropertyChanged}"
                                         MinHeight="36"
                                         Style="{StaticResource ModernTextBoxStyle}"
                                         ToolTip="e.g. BapCai.jpg"
                                         IsEnabled="{Binding IsFormEnabled}" Margin="0,0,8,0"/>
                                <Button Grid.Column="1" Command="{Binding SelectImageCommand}" Style="{StaticResource ViewImageButtonStyle}" Margin="0,5,0,5">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="📁" Margin="0,0,6,0" FontSize="12"/>
                                        <TextBlock Text="Browse" FontSize="12"/>
                                    </StackPanel>
                                </Button>
                            </Grid>

                            <!-- Active -->
                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Active" Margin="0,6,8,6" FontWeight="SemiBold"/>
                            <CheckBox  Grid.Row="6" Grid.Column="1" IsChecked="{Binding EditingIsActive}" IsEnabled="{Binding IsFormEnabled}" VerticalAlignment="Center"/>

                            <!-- Actions -->
                            <Grid Grid.Row="7" Grid.ColumnSpan="2" Margin="0,8,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>


                                <Button Grid.Column="0"
                                        Command="{Binding AddCommand}"
                                        IsEnabled="{Binding CanCreate}"
                                        Style="{StaticResource AddButtonStyle}"
                                        Margin="0,0,6,10">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="➕" Margin="0,0,6,0"/>
                                        <TextBlock Text="Add New"/>
                                    </StackPanel>
                                </Button>

                                <Button Grid.Column="1"
                                Command="{Binding SaveCommand}"
                                Style="{StaticResource SaveButtonStyle}"
                                IsEnabled="{Binding CanUpdate}"
                                Margin="0,0,0,10">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="💾" Margin="0,0,6,0"/>
                                        <TextBlock Text="Save"/>
                                    </StackPanel>
                                </Button>

                                <Button Grid.Column="0"
                                        Command="{Binding CancelCommand}"
                                        Style="{StaticResource CancelButtonStyle}"
                                        Margin="0,49,6,-41"
                                        IsEnabled="{Binding IsFormEnabled}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="↩️" Margin="0,0,6,0"/>
                                        <TextBlock Text="Cancel"/>
                                    </StackPanel>
                                </Button>

                                <Button Grid.Column="1"
                                        Command="{Binding DeleteCommand}"
                                        Style="{StaticResource DeleteButtonStyle}"
                                        Margin="0,49,0,-41"
                                        IsEnabled="{Binding CanDelete}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🗑️" Margin="0,0,6,0"/>
                                        <TextBlock Text="Delete"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Right: DataGrid -->
            <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                <DataGrid x:Name="ProductsDataGrid"
                          ItemsSource="{Binding Products}"
                          SelectedItem="{Binding SelectedProduct}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <!-- Image -->
                        <DataGridTemplateColumn Header="Image" Width="90">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="8" BorderBrush="#E5E7EB" BorderThickness="1" Margin="6">
                                        <Image Source="{Binding ImageUrl, Converter={StaticResource ImagePathConverter}}"
                                               Width="55" Height="55" Stretch="UniformToFill"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="ID" Binding="{Binding ProductId}" Width="40"/>

                        <!-- Name -->
                        <DataGridTextColumn Header="Name" Binding="{Binding ProductName}" Width="4*"/>

                        <!-- Description-->
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*"/>

                        <DataGridTextColumn Header="Category" Binding="{Binding Category.CategoryName}" Width="130"/>
                        <DataGridTextColumn Header="Stock" Binding="{Binding StockQuantity}" Width="80"/>
                        <DataGridTextColumn Header="Price (VND)" Binding="{Binding Price, StringFormat={}{0:N0}}" Width="130"/>
                        <DataGridTextColumn Header="Active" Binding="{Binding IsActive}" Width="80"/>
                        <DataGridTextColumn Header="Created" Binding="{Binding CreatedAt, StringFormat={}{0:dd/MM/yyyy}}" Width="120"/>
                        <DataGridTextColumn Header="Updated" Binding="{Binding UpdatedAt, Converter={StaticResource DateNullableConverter}}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
