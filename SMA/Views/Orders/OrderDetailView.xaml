<UserControl x:Class="SMA.Views.Orders.OrderDetailView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:core="clr-namespace:SMA.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1000"
      Background="#F6F8FA">

    <UserControl.Resources>
        <core:IndexToNumberConverter x:Key="IndexToNumberConverter"/>

        <!-- Modern Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="24,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2563EB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#10B981"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#EF4444"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DC2626"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#6B7280"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4B5563"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern DataGrid Style -->
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F9FAFB"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="RowHeight" Value="50"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F9FAFB"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="16,14"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#EFF6FF"/>
                    <Setter Property="Foreground" Value="#1F2937"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <StackPanel>
                <TextBlock Text="Chi Tiết Đơn Hàng"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#1F2937"
                           Margin="0,0,0,8"/>
                <TextBlock Foreground="#6B7280" FontSize="14">
                    <Run Text="Xem và chỉnh sửa thông tin đơn hàng"/>
                </TextBlock>
            </StackPanel>
        </Grid>

        <!-- Order Information Card -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="12" 
                Padding="24" 
                Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1" Color="#000000"/>
            </Border.Effect>
            
            <StackPanel>
                <Grid Margin="0,0,0,16">
                    <TextBlock Text="Thông Tin Đơn Hàng" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Foreground="#1F2937"/>
                    <Border Background="#EFF6FF" 
                            CornerRadius="6" 
                            Padding="10,6"
                            HorizontalAlignment="Right">
                        <TextBlock Text="{Binding OrderId, StringFormat='#{0}'}"
                                   FontWeight="SemiBold"
                                   Foreground="#3B82F6"
                                   FontSize="14"/>
                    </Border>
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Customer -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,12,16">
                        <TextBlock Text="Khách Hàng" 
                                   Foreground="#6B7280" 
                                   FontSize="13" 
                                   Margin="0,0,0,6"/>
                        <Border Background="#F9FAFB" 
                                CornerRadius="8" 
                                Padding="12">
                            <StackPanel Orientation="Horizontal">
                                <Border Background="#10B981" 
                                        Width="32" Height="32" 
                                        CornerRadius="16"
                                        Margin="0,0,10,0">
                                    <TextBlock Text="&#xE716;" 
                                               FontFamily="Segoe MDL2 Assets"
                                               Foreground="White"
                                               FontSize="14"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="{Binding CustomerName}" 
                                           VerticalAlignment="Center"
                                           FontWeight="Medium"
                                           FontSize="14"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Staff -->
                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="12,0,0,16">
                        <TextBlock Text="Nhân Viên" 
                                   Foreground="#6B7280" 
                                   FontSize="13" 
                                   Margin="0,0,0,6"/>
                        <Border Background="#F9FAFB" 
                                CornerRadius="8" 
                                Padding="12">
                            <StackPanel Orientation="Horizontal">
                                <Border Background="#3B82F6" 
                                        Width="32" Height="32" 
                                        CornerRadius="16"
                                        Margin="0,0,10,0">
                                    <TextBlock Text="&#xE77B;" 
                                               FontFamily="Segoe MDL2 Assets"
                                               Foreground="White"
                                               FontSize="14"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="{Binding StaffName}" 
                                           VerticalAlignment="Center"
                                           FontWeight="Medium"
                                           FontSize="14"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Created Date -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                        <TextBlock Text="Ngày Tạo" 
                                   Foreground="#6B7280" 
                                   FontSize="13" 
                                   Margin="0,0,0,6"/>
                        <Border Background="#F9FAFB" 
                                CornerRadius="8" 
                                Padding="12">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE787;" 
                                           FontFamily="Segoe MDL2 Assets"
                                           Foreground="#6B7280"
                                           FontSize="16"
                                           Margin="0,0,10,0"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding CreatedAt, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" 
                                           VerticalAlignment="Center"
                                           FontSize="14"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Section Title -->
        <TextBlock Grid.Row="2" 
                   Text="Sản Phẩm Trong Đơn" 
                   FontSize="18" 
                   FontWeight="SemiBold" 
                   Foreground="#1F2937"
                   Margin="0,0,0,12"/>

        <!-- Order Items DataGrid -->
        <Border Grid.Row="3"
                Background="White"
                CornerRadius="12"
                Padding="0"
                Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1" Color="#000000"/>
            </Border.Effect>

            <DataGrid ItemsSource="{Binding OrderItems}"
                      Style="{StaticResource ModernDataGrid}"
                      AlternationCount="9999">
                <DataGrid.Columns>
                    <!-- STT -->
                    <DataGridTemplateColumn Header="#" Width="0.5*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="#EFF6FF" 
                                        CornerRadius="6" 
                                        Padding="8,4"
                                        HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, 
                                                              Path=AlternationIndex, 
                                                              Converter={StaticResource IndexToNumberConverter}}"
                                               FontWeight="SemiBold"
                                               Foreground="#3B82F6"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Product Name -->
                    <DataGridTextColumn Header="Tên Sản Phẩm" Binding="{Binding ProductName}" Width="2*"/>

                    <!-- Unit Price -->
                    <DataGridTemplateColumn Header="Đơn Giá" Width="1.2*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding UnitPrice, StringFormat={}{0:N0} ₫}"
                                           Foreground="#6B7280"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Quantity -->
                    <DataGridTemplateColumn Header="Số Lượng" Width="1.8*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="-" 
                                            Style="{StaticResource DangerButton}"
                                            Command="{Binding DataContext.DecreaseQtyCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Margin="0,0,8,0"/>
                                    <Border Background="#F3F4F6" 
                                            CornerRadius="6" 
                                            Padding="12,6"
                                            MinWidth="50">
                                        <TextBlock Text="{Binding Quantity}" 
                                                   TextAlignment="Center" 
                                                   FontWeight="Bold"
                                                   Foreground="#1F2937"/>
                                    </Border>
                                    <Button Content="+" 
                                            Style="{StaticResource SuccessButton}"
                                            Width="32" Height="32" Padding="0"
                                            Command="{Binding DataContext.IncreaseQtyCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Margin="8,0,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Total -->
                    <DataGridTemplateColumn Header="Thành Tiền" Width="1.2*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="#FEF3C7" 
                                        CornerRadius="6" 
                                        Padding="10,6"
                                        HorizontalAlignment="Left">
                                    <TextBlock Text="{Binding Total, StringFormat={}{0:N0} ₫}"
                                               FontWeight="SemiBold"
                                               Foreground="#D97706"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Remove -->
                    <DataGridTemplateColumn Header="Xóa" Width="0.7*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="&#xE74D;" 
                                        FontFamily="Segoe MDL2 Assets"
                                        Style="{StaticResource DangerButton}"
                                        Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        ToolTip="Xóa sản phẩm"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Summary Card -->
        <Border Grid.Row="4" 
                Background="White" 
                CornerRadius="12" 
                Padding="24" 
                Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1" Color="#000000"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="1" MinWidth="300">
                    <TextBlock Text="Tổng Kết" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Foreground="#1F2937"
                               Margin="0,0,0,16"/>

                    <Grid Margin="0,0,0,12">
                        <TextBlock Text="Tổng Tiền:" 
                                   FontSize="14"
                                   Foreground="#6B7280"/>
                        <TextBlock Text="{Binding TotalPrice, StringFormat={}{0:N0} ₫}" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#3B82F6"
                                   HorizontalAlignment="Right"/>
                    </Grid>

                    <Separator Margin="0,0,0,12" Background="#E5E7EB"/>

                    <Grid Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE73A;" 
                                       FontFamily="Segoe MDL2 Assets"
                                       Foreground="#EF4444"
                                       FontSize="14"
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Điểm Đã Dùng:" 
                                       FontSize="14"
                                       Foreground="#6B7280"/>
                        </StackPanel>
                        <TextBlock Text="{Binding PointUsed}" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Foreground="#EF4444"
                                   HorizontalAlignment="Right"/>
                    </Grid>

                    <Grid>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE734;" 
                                       FontFamily="Segoe MDL2 Assets"
                                       Foreground="#10B981"
                                       FontSize="14"
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Điểm Nhận Được:" 
                                       FontSize="14"
                                       Foreground="#6B7280"/>
                        </StackPanel>
                        <TextBlock Text="{Binding PointReceived}" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Foreground="#10B981"
                                   HorizontalAlignment="Right"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="5"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Command="{Binding ExportPdfCommand}"
                    Margin="0,0,12,0">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
                        <Setter Property="Background" Value="#F59E0B"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D97706"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text=" &#xE8E5;" 
                               FontFamily="Segoe MDL2 Assets"
                               Margin="0,0,8,0"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="Export PDF " VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Content=" Cập Nhật "
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding UpdateCommand}"
                    Margin="0,0,12,0"/>

            <Button Content=" Quay Lại "
                    Style="{StaticResource SecondaryButton}"
                    Command="{Binding GoBackCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>