<UserControl x:Class="SMA.Views.Orders.OrderList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SMA.Views.Orders"
      xmlns:core="clr-namespace:SMA.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1200"
      Background="#F6F8FA">

    <UserControl.Resources>
        <core:IndexToNumberConverter x:Key="IndexToNumberConverter"/>

        <!-- Modern Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2563EB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Success Button (Orange for Create) -->
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#10B981"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Warning Button -->
        <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#F59E0B"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D97706"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Info Button for View -->
        <Style x:Key="InfoButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#06B6D4"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0891B2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#3B82F6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern DatePicker Style -->
        <Style x:Key="ModernDatePicker" TargetType="DatePicker">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Modern DataGrid Style -->
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F9FAFB"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="RowHeight" Value="52"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- DataGrid Header Style -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F9FAFB"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="16,14"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <!-- DataGrid Cell Style -->
        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Padding="{TemplateBinding Padding}" 
                                Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#EFF6FF"/>
                    <Setter Property="Foreground" Value="#1F2937"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock Text="Quản Lý Đơn Hàng"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#1F2937"
                           Margin="0,0,0,8"/>
                <TextBlock Foreground="#6B7280" FontSize="14">
                    <Run Text="Xem và quản lý tất cả các đơn hàng trong hệ thống"/>
                </TextBlock>
            </StackPanel>

            <Button Grid.Column="1"
                    Style="{StaticResource SuccessButton}"
                    Command="{Binding CreateCommand}"
                    Height="48"
                    Padding="24,0"
                    VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xE710;" 
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="16"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <TextBlock Text="Tạo Đơn Hàng Mới" 
                               FontSize="15"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Search & Filter Section -->
        <Border Grid.Row="1" 
                Background="White"
                CornerRadius="12"
                Padding="24"
                Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1" Color="#000000"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box with Icon -->
                <Grid Grid.Column="0" Margin="0,0,16,0">
                    <TextBox Style="{StaticResource ModernTextBox}"
                             Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}"
                             Padding="40,0,12,0"/>
                    <TextBlock Text="&#xE721;" 
                               FontFamily="Segoe MDL2 Assets"
                               Foreground="#9CA3AF"
                               FontSize="16"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"
                               IsHitTestVisible="False"/>
                    <TextBlock Text="Tìm kiếm theo tên nhân viên, khách hàng..."
                               Foreground="#9CA3AF"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Margin="40,0,12,0"
                               IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SearchKeyword}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <!-- DatePicker with Icon -->
                <Grid Grid.Column="1" Margin="0,0,16,0">
                    <DatePicker Style="{StaticResource ModernDatePicker}"
                                SelectedDate="{Binding SelectedDate, Mode=TwoWay}"
                                Padding="40,0,12,0"/>
                    <TextBlock Text="&#xE787;" 
                               FontFamily="Segoe MDL2 Assets"
                               Foreground="#9CA3AF"
                               FontSize="16"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"
                               IsHitTestVisible="False"/>
                </Grid>

                <Button Grid.Column="2"
                        Content="Tìm kiếm"
                        Style="{StaticResource PrimaryButton}"
                        Command="{Binding SearchCommand}"
                        Width="120"/>
            </Grid>
        </Border>

        <!-- DataGrid Section -->
        <Border Grid.Row="2"
                Background="White"
                CornerRadius="12"
                Padding="0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1" Color="#000000"/>
            </Border.Effect>

            <DataGrid ItemsSource="{Binding FilteredOrders}"
                      Style="{StaticResource ModernDataGrid}"
                      AlternationCount="9999"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      ScrollViewer.VerticalScrollBarVisibility="Auto">
                <DataGrid.Columns>
                    <!-- STT Column -->
                    <DataGridTemplateColumn Header="#" Width="0.5*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="#EFF6FF" 
                                        CornerRadius="6" 
                                        Padding="8,4"
                                        HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, 
                                                              Path=AlternationIndex, 
                                                              Converter={StaticResource IndexToNumberConverter}}"
                                               FontWeight="SemiBold"
                                               Foreground="#3B82F6"
                                               HorizontalAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Staff Name -->
                    <DataGridTemplateColumn Header="Nhân Viên" Width="1.3*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="#3B82F6" 
                                            Width="32" Height="32" 
                                            CornerRadius="16"
                                            Margin="0,0,10,0">
                                        <TextBlock Text="&#xE77B;" 
                                                   FontFamily="Segoe MDL2 Assets"
                                                   Foreground="White"
                                                   FontSize="14"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="{Binding StaffName}" 
                                               VerticalAlignment="Center"
                                               FontWeight="Medium"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Customer Name -->
                    <DataGridTemplateColumn Header="Khách Hàng" Width="1.3*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="#10B981" 
                                            Width="32" Height="32" 
                                            CornerRadius="16"
                                            Margin="0,0,10,0">
                                        <TextBlock Text="&#xE716;" 
                                                   FontFamily="Segoe MDL2 Assets"
                                                   Foreground="White"
                                                   FontSize="14"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="{Binding CustomerName}" 
                                               VerticalAlignment="Center"
                                               FontWeight="Medium"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Total Price -->
                    <DataGridTemplateColumn Header="Tổng Tiền" Width="1.1*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="#FEF3C7" 
                                        CornerRadius="6" 
                                        Padding="10,6"
                                        HorizontalAlignment="Left">
                                    <TextBlock Text="{Binding TotalPrice, StringFormat={}{0:N0} ₫}"
                                               FontWeight="SemiBold"
                                               Foreground="#D97706"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Point Received -->
                    <DataGridTemplateColumn Header="Điểm Nhận" Width="0.9*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="+" 
                                               Foreground="#10B981"
                                               FontWeight="SemiBold"
                                               Margin="0,0,4,0"/>
                                    <TextBlock Text="{Binding PointReceived}"
                                               Foreground="#10B981"
                                               FontWeight="SemiBold"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Point Used -->
                    <DataGridTemplateColumn Header="Điểm Dùng" Width="0.9*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="-" 
                                               Foreground="#EF4444"
                                               FontWeight="SemiBold"
                                               Margin="0,0,4,0"/>
                                    <TextBlock Text="{Binding PointUsed}"
                                               Foreground="#EF4444"
                                               FontWeight="SemiBold"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Created At -->
                    <DataGridTemplateColumn Header="Ngày Tạo" Width="1*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE787;" 
                                               FontFamily="Segoe MDL2 Assets"
                                               Foreground="#6B7280"
                                               FontSize="14"
                                               Margin="0,0,8,0"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding CreatedAt, StringFormat={}{0:dd/MM/yyyy}}"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Actions -->
                    <DataGridTemplateColumn Header="Thao Tác" Width="0.8*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="&#xE8F4;" 
                                        FontFamily="Segoe MDL2 Assets"
                                        Style="{StaticResource InfoButton}"
                                        Command="{Binding DataContext.ViewCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                        CommandParameter="{Binding}"
                                        Width="40" Height="36"
                                        Padding="0"
                                        ToolTip="Xem chi tiết"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Footer Stats (Optional) -->
        <Grid Grid.Row="3" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Orders Card -->
            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="10"
                    Padding="20"
                    Margin="0,0,10,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.08" Color="#000000"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="&#xE8C8;" 
                               FontFamily="Segoe MDL2 Assets"
                               Foreground="#3B82F6"
                               FontSize="24"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Tổng Đơn Hàng"
                               Foreground="#6B7280"
                               FontSize="13"
                               Margin="0,0,0,4"/>
                    <TextBlock Text="{Binding FilteredOrders.Count}"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#1F2937"/>
                </StackPanel>
            </Border>

        </Grid>
    </Grid>
</UserControl>
