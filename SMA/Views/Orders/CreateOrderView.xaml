<UserControl x:Class="SMA.Views.Orders.CreateOrderView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SMA.Views.Orders"
      xmlns:core="clr-namespace:SMA.Converters"
      mc:Ignorable="d"
      Height="900" Width="1600"
      Background="#F6F8FA">

    <UserControl.Resources>
        <core:IndexToNumberConverter x:Key="IndexToNumberConverter"/>

        <!-- Modern Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2563EB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ConfirmButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#10B981"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#EF4444"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DC2626"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#6B7280"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4B5563"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern TextBox -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#3B82F6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern ComboBox -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Modern DataGrid -->
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F9FAFB"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="RowHeight" Value="48"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F9FAFB"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,12"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#EFF6FF"/>
                    <Setter Property="Foreground" Value="#1F2937"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="Tạo Đơn Hàng Mới"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#1F2937"
                               Margin="0,0,0,8"/>
                    <TextBlock Foreground="#6B7280" FontSize="14">
                        <Run Text="Chọn sản phẩm và khách hàng để tạo đơn hàng"/>
                    </TextBlock>
                </StackPanel>
            </Grid>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.3*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- LEFT: Product Selection -->
                <Border Grid.Column="0" 
                        Background="White" 
                        CornerRadius="12" 
                        Padding="24">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1" Color="#000000"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Title -->
                        <TextBlock Text="Danh Sách Sản Phẩm" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Foreground="#1F2937"
                                   Margin="0,0,0,16"/>

                        <!-- Search & Filter -->
                        <Grid Grid.Row="1" Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <ComboBox x:Name="cmbCategory"
                                     Grid.Column="0"
                                     Style="{StaticResource ModernComboBox}"
                                     DisplayMemberPath="CategoryName"
                                     SelectedValuePath="CategoryId"
                                     SelectedValue="{Binding SelectedCategoryId}"
                                     ItemsSource="{Binding Categories}"
                                     Margin="0,0,12,0"/>

                            <Grid Grid.Column="1" Margin="0,0,12,0">
                                <TextBox Style="{StaticResource ModernTextBox}"
                                         Text="{Binding ProductSearchText, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="40,0,12,0"/>
                                <TextBlock Text="&#xE721;" 
                                           FontFamily="Segoe MDL2 Assets"
                                           Foreground="#9CA3AF"
                                           FontSize="16"
                                           VerticalAlignment="Center"
                                           Margin="12,0,0,0"
                                           IsHitTestVisible="False"/>
                            </Grid>

                            <Button Grid.Column="2"
                                    Content="Tìm"
                                    Style="{StaticResource PrimaryButton}"
                                    Command="{Binding SearchProductCommand}"
                                    Width="90"/>
                        </Grid>

                        <!-- Products DataGrid -->
                        <DataGrid Grid.Row="2"
                                 ItemsSource="{Binding FilteredProducts}"
                                 SelectedItem="{Binding SelectedProduct}"
                                 Style="{StaticResource ModernDataGrid}"
                                 AlternationCount="9999"
                                 HorizontalScrollBarVisibility="Visible"
ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="#" Width="50">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="#EFF6FF" 
                                                    CornerRadius="6" 
                                                    Padding="6,4"
                                                    HorizontalAlignment="Center">
                                                <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, 
                                                                          Path=AlternationIndex, 
                                                                          Converter={StaticResource IndexToNumberConverter}}"
                                                           FontWeight="SemiBold"
                                                           Foreground="#3B82F6"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTextColumn Header="Tên Sản Phẩm" Binding="{Binding ProductName}" Width="*"/>
                                <DataGridTextColumn Header="Danh Mục" Binding="{Binding Category.CategoryName}" Width="110"/>
                                
                                <DataGridTemplateColumn Header="Giá" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Price, StringFormat={}{0:N0} ₫}"
                                                       Foreground="#6B7280"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="Kho" Width="70">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="#DBEAFE" 
                                                    CornerRadius="6" 
                                                    Padding="8,4"
                                                    HorizontalAlignment="Center">
                                                <TextBlock Text="{Binding StockQuantity}"
                                                           FontWeight="SemiBold"
                                                           Foreground="#1E40AF"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="Thêm" Width="70">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="&#xE710;"
                                                    FontFamily="Segoe MDL2 Assets"
                                                    Style="{StaticResource SuccessButton}"
                                                    Width="32" Height="32" Padding="0"
                                                    Command="{Binding DataContext.AddProductCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="Thêm vào đơn"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                <!-- RIGHT: Order Details -->
                <Border Grid.Column="2" 
                        Background="White" 
                        CornerRadius="12" 
                        Padding="24">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1" Color="#000000"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Title -->
                        <TextBlock Text="Đơn Hàng Hiện Tại" 
                                   Grid.Row="0"
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Foreground="#1F2937"
                                   Margin="0,0,0,16"/>

                        <!-- Customer Selection -->
                        <Border Grid.Row="1" 
                                Background="#F9FAFB" 
                                CornerRadius="8" 
                                Padding="16"
                                Margin="0,0,0,16">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Khách Hàng" 
                                           Foreground="#6B7280" 
                                           FontSize="13"
                                           Margin="0,0,0,8"/>

                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <ComboBox x:Name="cmbCustomer"
                                             Grid.Column="0"
                                             Style="{StaticResource ModernComboBox}"
                                             DisplayMemberPath="CustomerName"
                                             SelectedValuePath="CustomerId"
                                             SelectedValue="{Binding SelectedCustomerId}"
                                             ItemsSource="{Binding Customers}"
                                             Margin="0,0,12,0"/>

                                    <Border Grid.Column="1"
                                            Background="#DBEAFE" 
                                            CornerRadius="8" 
                                            Padding="12,8"
                                            VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#xE734;" 
                                                       FontFamily="Segoe MDL2 Assets"
                                                       Foreground="#1E40AF"
                                                       FontSize="14"
                                                       Margin="0,0,6,0"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding SelectedCustomerPoints, StringFormat='{}{0} điểm'}"
                                                       FontWeight="SemiBold"
                                                       Foreground="#1E40AF"
                                                       FontSize="13"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Grid>
                        </Border>

                        <!-- Order Items -->
                        <DataGrid Grid.Row="2"
                                 ItemsSource="{Binding OrderItems}"
                                 Style="{StaticResource ModernDataGrid}"
                                 Margin="0,0,0,16">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Sản Phẩm" Binding="{Binding ProductName}" Width="*"/>
                                
                                <DataGridTemplateColumn Header="Giá" Width="90">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding UnitPrice, StringFormat={}{0:N0}}"
                                                       Foreground="#6B7280"
                                                       FontSize="13"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="SL" Width="130">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Content="-" 
                                                        Style="{StaticResource DangerButton}"
                                                        Command="{Binding DataContext.DecreaseQtyCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Margin="0,0,6,0"/>
                                                <Border Background="#F3F4F6" 
                                                        CornerRadius="6" 
                                                        Padding="10,6"
                                                        MinWidth="40">
                                                    <TextBlock Text="{Binding Quantity}" 
                                                               TextAlignment="Center" 
                                                               FontWeight="Bold"/>
                                                </Border>
                                                <Button Content="+" 
                                                        Style="{StaticResource SuccessButton}"
                                                        Command="{Binding DataContext.IncreaseQtyCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Margin="6,0,0,0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="" Width="40">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="&#xE74D;" 
                                                    FontFamily="Segoe MDL2 Assets"
                                                    Style="{StaticResource DangerButton}"
                                                    Command="{Binding DataContext.RemoveProductCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="Xóa"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Summary -->
                        <Border Grid.Row="3" 
                                Background="#F9FAFB" 
                                CornerRadius="8" 
                                Padding="16" 
                                Margin="0,0,0,16">
                            <StackPanel>
                                <CheckBox Content="Sử Dụng Điểm" 
                                         IsChecked="{Binding UsePoints}"
                                         Margin="0,0,0,12"
                                         FontSize="14"
                                         FontWeight="SemiBold"/>

                                <Grid Margin="0,0,0,8">
                                    <TextBlock Text="Tạm tính:" 
                                               FontSize="13"
                                               Foreground="#6B7280"/>
                                    <TextBlock Text="{Binding SubTotal, StringFormat={}{0:N0} ₫}" 
                                               FontSize="14" 
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Right"/>
                                </Grid>

                                <Grid Margin="0,0,0,8">
                                    <TextBlock Text="Giảm từ điểm:" 
                                               FontSize="13"
                                               Foreground="#10B981"/>
                                    <TextBlock Text="{Binding PointDiscount, StringFormat={}-{0:N0} ₫}" 
                                               FontSize="14" 
                                               FontWeight="SemiBold" 
                                               Foreground="#10B981"
                                               HorizontalAlignment="Right"/>
                                </Grid>

                                <Separator Background="#D1D5DB" Margin="0,8"/>

                                <Grid Margin="0,8,0,0">
                                    <TextBlock Text="Tổng cộng:" 
                                               FontSize="15" 
                                               FontWeight="Bold"
                                               Foreground="#1F2937"/>
                                    <TextBlock Text="{Binding TotalPrice, StringFormat={}{0:N0} ₫}" 
                                               FontSize="18" 
                                               FontWeight="Bold" 
                                               Foreground="#3B82F6"
                                               HorizontalAlignment="Right"/>
                                </Grid>

                                <Grid Margin="0,12,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE734;" 
                                                   FontFamily="Segoe MDL2 Assets"
                                                   Foreground="#F59E0B"
                                                   FontSize="14"
                                                   Margin="0,0,6,0"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Text="Điểm nhận được:" 
                                                   FontSize="13"
                                                   Foreground="#6B7280"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding PointsReceived}" 
                                               FontSize="14" 
                                               FontWeight="SemiBold" 
                                               Foreground="#F59E0B"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Actions -->
                        <Grid Grid.Row="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0"
                                    Content=" Hủy "
                                    Style="{StaticResource SecondaryButton}"
                                    Command="{Binding GoBackCommand}"
                                    Margin="0,0,6,0"
                                    Height="44"/>

                            <Button Grid.Column="1"
                                    Content=" Xác Nhận "
                                    Style="{StaticResource ConfirmButton}"
                                    Command="{Binding ConfirmOrderCommand}"
                                    Margin="6,0,0,0"
                                    Height="44"/>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>