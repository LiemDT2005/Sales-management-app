<UserControl x:Class="SMA.Views.Staff.CustomerManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:SMA.Converters"
             mc:Ignorable="d" 
             d:DesignWidth="1100" d:DesignHeight="720"
             Background="#F6F8FA">

    <UserControl.Resources>
        <!-- Converter -->
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:GenderToBoolConverter x:Key="GenderConverter"/>

        <!-- Modern Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2563EB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Success Button -->
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#10B981"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Danger Button -->
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#EF4444"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DC2626"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#3B82F6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern DataGrid Style -->
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F9FAFB"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="RowHeight" Value="48"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- DataGrid Header Style -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F9FAFB"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <!-- DataGrid Cell Style -->
        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#EFF6FF"/>
                    <Setter Property="Foreground" Value="#1F2937"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock Text="Quản Lý Khách Hàng"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#1F2937"
                           Margin="0,0,0,8"/>
                <TextBlock Foreground="#6B7280" FontSize="14">
                    <Run Text="Quản lý thông tin khách hàng và theo dõi điểm tích lũy"/>
                </TextBlock>
            </StackPanel>

            <Border Grid.Column="1" 
                    Background="#3B82F6"
                    CornerRadius="10"
                    Padding="16,10"
                    VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xE716;" 
                               FontFamily="Segoe MDL2 Assets"
                               Foreground="White"
                               FontSize="20"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding Customers.Count, StringFormat='{}{0} khách hàng'}"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Search Section -->
        <Border Grid.Row="1" 
                Background="White"
                CornerRadius="12"
                Padding="24"
                Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1" Color="#000000"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box with Icon -->
                <Grid>
                    <TextBox Style="{StaticResource ModernTextBox}"
                             Text="{Binding searchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Padding="40,0,12,0"/>
                    <TextBlock Text="&#xE721;" 
                               FontFamily="Segoe MDL2 Assets"
                               Foreground="#9CA3AF"
                               FontSize="16"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"
                               IsHitTestVisible="False"/>
                    <TextBlock Text="Tìm kiếm theo tên, số điện thoại, email..."
                               Foreground="#9CA3AF"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Margin="40,0,12,0"
                               IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding searchText}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <Button Grid.Column="1"
                        Content="Tìm kiếm"
                        Style="{StaticResource PrimaryButton}"
                        Command="{Binding SearchCommand}"
                        Margin="16,0,0,0"
                        Width="120"/>
            </Grid>
        </Border>

        <!-- Add Customer Section -->
        <Border Grid.Row="2" 
        Background="White"
        CornerRadius="12"
        Padding="24"
        Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1" Color="#000000"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Thêm / Cập Nhật Khách Hàng"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Foreground="#1F2937"
                   Margin="0,0,0,16"/>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Row 1 -->
                    <StackPanel Grid.Column="0" Margin="0,0,12,0">
                        <TextBlock Text="Tên Khách Hàng *" 
                           FontWeight="SemiBold" 
                           Foreground="#374151"
                           Margin="0,0,0,8"/>
                        <TextBox Style="{StaticResource ModernTextBox}" 
                         Text="{Binding textBoxItem.CustomerName, Mode=TwoWay}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="6,0">
                        <TextBlock Text="Số Điện Thoại *" 
                           FontWeight="SemiBold" 
                           Foreground="#374151"
                           Margin="0,0,0,8"/>
                        <TextBox Style="{StaticResource ModernTextBox}" 
                         Text="{Binding textBoxItem.Phone, Mode=TwoWay}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="12,0,0,0">
                        <TextBlock Text="Email" 
                           FontWeight="SemiBold" 
                           Foreground="#374151"
                           Margin="0,0,0,8"/>
                        <TextBox Style="{StaticResource ModernTextBox}" 
                         Text="{Binding textBoxItem.Email, Mode=TwoWay}"/>
                    </StackPanel>

                    <!-- Row 2 -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,16,12,0">
                        <TextBlock Text="Giới Tính" 
                           FontWeight="SemiBold" 
                           Foreground="#374151"
                           Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal" Height="40" VerticalAlignment="Center">
                            <RadioButton Content="Nam" 
                                 GroupName="Gender" 
                                 FontSize="14" 
                                 Margin="0,0,24,0"
                                 VerticalContentAlignment="Center"
                                 IsChecked="{Binding textBoxItem.Gender,
                                             Converter={StaticResource GenderConverter},
                                             ConverterParameter=Nam, Mode=TwoWay}"/>
                            <RadioButton Content="Nữ" 
                                 GroupName="Gender"  
                                 FontSize="14"
                                 VerticalContentAlignment="Center"
                                 IsChecked="{Binding textBoxItem.Gender,
                                             Converter={StaticResource GenderConverter},
                                             ConverterParameter=Nữ, Mode=TwoWay}"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="6,16,6,0">
                        <TextBlock Text="Địa Chỉ" 
                           FontWeight="SemiBold" 
                           Foreground="#374151"
                           Margin="0,0,0,8"/>
                        <TextBox Style="{StaticResource ModernTextBox}" 
                         Text="{Binding textBoxItem.Address, Mode=TwoWay}"/>
                    </StackPanel>

                    <!-- Row 3: Buttons -->
                    <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" 
                        HorizontalAlignment="Right" Margin="0,20,0,0" >
                        <Button Content="+ Thêm" Width="60" Height="30" FontSize="12" FontWeight="Bold"
                        Background="LawnGreen" Foreground="Green"
                        Command="{Binding AddCommand}" 
                        IsEnabled="{Binding CanAdd}" Margin="0, 0, 10, 0"/>

                        <Button Content="✏️ Cập Nhật"  Width="100" Height="30" FontSize="12" FontWeight="Bold"
                           Background="LightBlue" Foreground="Blue"
                        Command="{Binding UpdateCommand}" 
                        IsEnabled="{Binding CanEditDelete}" Margin="0, 0, 10, 0"/>

                        <Button Content="🗑️ Xóa" Width="50" Height="30" FontSize="12" FontWeight="Bold"
                           Background="LightPink" Foreground="Red"
                    
                                Command="{Binding DeleteCommand}"  
                        IsEnabled="{Binding CanEditDelete}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>


        <!-- DataGrid Section -->
        <Border Grid.Row="3"
        Background="White"
        CornerRadius="8"
        Padding="0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.1" Color="#000000"/>
            </Border.Effect>

            <DataGrid x:Name="datagrid_Customer"
              ItemsSource="{Binding Customers}"
              SelectedItem="{Binding selectedItem, Mode=OneWayToSource}"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              CanUserDeleteRows="False"
              IsReadOnly="True"
              SelectionMode="Single"
              SelectionUnit="FullRow"
              AlternatingRowBackground="#FAFAFA"
              HeadersVisibility="Column"
              GridLinesVisibility="None"
              RowHeight="50"
              FontSize="20"
              BorderThickness="0"
              Background="White"
              RowHeaderWidth="0"
              HorizontalGridLinesBrush="Transparent"
              VerticalGridLinesBrush="Transparent">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding CustomerId}" Width="0.6*"/>
                    <DataGridTextColumn Header="Tên Khách Hàng" Binding="{Binding CustomerName}" Width="1.5*"/>
                    <DataGridTextColumn Header="Số Điện Thoại" Binding="{Binding Phone}" Width="1.2*"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="1.8*"/>
                    <DataGridTextColumn Header="Giới Tính" Binding="{Binding Gender}" Width="0.8*"/>
                    <DataGridTextColumn Header="Địa Chỉ" Binding="{Binding Address}" Width="2*"/>
                    <DataGridTextColumn Header="Điểm" Binding="{Binding Point}" Width="0.7*"/>
                </DataGrid.Columns>

                <!-- Row style cho hover & chọn -->
                <DataGrid.Resources>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="4,2"/>
                        <Setter Property="SnapsToDevicePixels" Value="True"/>
                        <Style.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F3F4F6"/>
                            </Trigger>
                            <!-- Selected -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E0E7FF"/>
                                <Setter Property="Foreground" Value="#111827"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>
            </DataGrid>
        </Border>


    </Grid>
</UserControl>
